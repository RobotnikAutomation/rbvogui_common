<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="steer_set" params="prefix parent *origin hq">
    <xacro:macro name="cylinder_inertia" params="m r h">
      <inertia ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0" iyy="${m*(3*r*r+h*h)/12}" iyz = "0" izz="${m*r*r/2}" />
    </xacro:macro>
    <xacro:property name="M_PI" value="3.1415926535897931" />
    <xacro:property name="wheel_radius" value="0.110" />
    <xacro:property name="wheel_width" value="0.110" />
    <xacro:property name="wheel_mass" value="5.0" />

    <!--MOTOR WHEEL -->
    <joint name="${prefix}base_set_joint" type="revolute">
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child link="${prefix}base_wheel_link" />
      <axis xyz="0 0 1" />

      <limit effort="100" velocity="100" lower="-${2*M_PI/3}" upper="${2*M_PI/3}" />
    </joint>

    <link name="${prefix}base_wheel_link" />

    <joint name="${prefix}set_joint" type="fixed">
      <parent link="${prefix}base_wheel_link"/>
      <child link="${prefix}set_wheel_link"/>
      <origin xyz="0 -0.079 0.132" rpy="${-M_PI/2} 0 0" />
      <axis xyz="0 0 1" rpy="0 0 0" />
    </joint>

    <link name="${prefix}set_wheel_link">
      <visual>
        <origin xyz="0 0 0.079" rpy="${-M_PI/2} ${M_PI} 0" />
        <geometry>
          <mesh filename="package://rbvogui_description/meshes/wheels/mw_frame.stl" />
        </geometry>
        <material name="red2">
          <color rgba="0.9 0.1 0.1 1"/>     
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0.079" rpy="${-M_PI/2} ${M_PI} 0" />
        <geometry>
          <mesh filename="package://rbvogui_description/meshes/wheels/mw_frame.stl" />
        </geometry>
      </collision>

      <inertial>
        <mass value="4" />
        <origin xyz="0 0 0.0" rpy="0 0 0"/>
        <xacro:cylinder_inertia m="${wheel_mass}" r="${wheel_radius}" h="${wheel_width}" />
      </inertial>
    </link>

    <gazebo reference="${prefix}set_wheel_link">
      <material>Gazebo/Red</material>
    </gazebo>
  </xacro:macro>
</robot>
